@model Fangorn.Models.TeamViewModels.Team

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Team</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Members" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Members" class="form-control"></select>
                <span asp-validation-for="Members" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Selected Members</label>
            <div class="col-md-10">
                <select asp-for="SelecteMembers" class="form-control"></select>
                <span asp-validation-for="Members" class="text-danger"></span>

            </div>
        </div>
