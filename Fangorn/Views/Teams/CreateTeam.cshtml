@model Tower.Models.TeamViewModels.CreateTeamViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="CreateTeam" method="post">
    <div class="form-horizontal">
        <h4>Team</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10"> 
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-2">
                <div class="col-md-3 form-group">
                    <label class="control-label">Team Members</label>
                    <div>
                        <select asp-for="Members" class="form-control"></select>
                        <span asp-validation-for="Members" class="text-danger"></span>

                    </div>
                </div>
            </div>
            
                <div class="col-md-2 form-group">
                    <label class="control-label"></label>

                    <div>
                        <input class="col-md-offset-4" type="button" id="left" value="<" />
                        <input type="button" id="right" value=">" />

                    </div>
                </div>
            
            <div class="col-md-3 form-group">

                <label class="control-label">All Users</label>
                <div>
                    <select asp-for="Users" asp-items="Model.Users" class="form-control"></select>
                    <span asp-validation-for="Members" class="text-danger"></span>
                </div>

               

            </div>
        </div>

       
        

       
       </br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

  
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    <script src="~/js/team.js"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



}

