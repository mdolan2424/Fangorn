@model Fangorn.Models.TicketViewModels.Ticket
@{
    Layout = "_Layout";
    ViewData["Title"] = "New Ticket";
    DateTime.Now.ToString("dd-MM-yyyy");
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Ticket" asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-10">
            Title:  <input asp-for="Title" class="form-control"/> </br>
            
            Description:  <textarea asp-for="Description" rows="5" cols="10" class="form-control"/></textarea></br>
            Due Date:  <input asp-for="DueDate" class="form-control" /></br>  
            Add to Calendar <input type="checkbox" class="form-control"/>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>

