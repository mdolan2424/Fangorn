
@{
    ViewData["Title"] = "view";
    DateTime.Now.ToString("dd-MM-yyyy");
}


<div id="dataContainer">
    <h2>Tickets</h2>

    <div>


        <form asp-action="Create" method="get">
            <button type="submit">New Ticket</button>
        </form>
        <table id="tableTickets" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Due Date</th>
                    <th>Creator</th>
                    <th>Description</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var ticket in Model)
            {
                    <div id=collapse@ticket.Title>
                        <tr id=@ticket.Id>
                            <th>@ticket.Id</th>
                            <td><a asp-action="Details" asp-controller="Ticket" asp-route-id="@ticket.Id">@ticket.Title</a></td>
                            <td>@ticket.DueDate</td>
                            <td>@ticket.Creator</td>
                            <td>@ticket.Description</td>
                            <td><a asp-action="Edit" asp-route-id="@ticket.Id">View</a></td>
                            <td><a asp-action="Edit" asp-route-id="@ticket.Id">Edit</a></td>
                        </tr>
                    </div>
                }
            </tbody>
        </table>
        <form asp-action="Create" method="get">
            <button type="submit">New Ticket</button>
        </form>
    </div>

</div>

