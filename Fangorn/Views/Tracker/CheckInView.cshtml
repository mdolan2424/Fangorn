@model Tower.Models.TrackerViewModels.CheckInViewModel

@{
    ViewData["Title"] = "CheckInView";
}

<h2>Start Time Log</h2>

<h4>Select A Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckInPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="col-md-2 control-label">Select</label>
                <div class="col-md-10">
                    
                    @Html.DropDownListFor(Model => Model.Client.Email, Model.Clients)
                    <span asp-validation-for="@Model.Clients" class="text-danger"></span>
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
